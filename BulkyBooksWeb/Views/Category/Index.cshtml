@model IEnumerable<Category>
@{ ViewData["Title"] = "Index"; }

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Catergory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning">Create New Catergory</a>
        </div>
    </div>
    <br><br>
    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model){
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@obj.id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Category" class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@obj.id"><i class="bi bi-pencil-square"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table> 
</div>
